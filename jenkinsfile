pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // Add your build steps here
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...
                // Add your test steps here
                sh 'echo testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Add your deployment steps here
            }
        }
    }
    post{
        always{
            echo "this section always run"
        }
        success{
            echo "this section runs only pipeline success"
        }
        failure{
            echo "this section runs only pipeline fails"
        }
    }
}